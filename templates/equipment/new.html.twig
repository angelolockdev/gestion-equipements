{% extends 'base.html.twig' %}

{% block title %}Créer un équipement{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Créer un nouvel équipement</h1>

    <div class="bg-white p-6 rounded-lg shadow-md">
        {{ form_start(form) }}
        <div class="space-y-4">
            {{ form_row(form.name) }}
            {{ form_row(form.category) }}
            {{ form_row(form.number) }}
            {{ form_row(form.description) }}
            {{ form_row(form.employee) }}
        </div>
        <button type="submit" class="mt-6 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            Enregistrer
        </button>
        <a href="{{ path('app_equipment_index') }}" class="mt-6 ml-4 inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
            Retour à la liste
        </a>
        {{ form_end(form) }}
    </div>
{% endblock %}